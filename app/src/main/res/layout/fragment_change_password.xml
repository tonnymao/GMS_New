<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvOldPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:text="Old Password"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/edtOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/tvOldPass"
        android:layout_alignRight="@id/tvOldPass"
        android:layout_below="@id/tvOldPass"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtOldPassword"
        android:layout_alignLeft="@id/edtOldPassword"
        android:layout_alignRight="@id/edtOldPassword"
        android:layout_marginTop="10dp"
        android:text="New Password"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edtOldPassword"
        android:layout_alignRight="@id/edtOldPassword"
        android:layout_below="@id/tvNewPass"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvRetypePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:layout_alignLeft="@id/edtOldPassword"
        android:layout_alignRight="@id/edtOldPassword"
        android:layout_marginTop="10dp"
        android:text="Retype New Password"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edtPassword"
        android:layout_alignRight="@id/edtPassword"
        android:layout_below="@id/tvRetypePass"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edtConfirmPassword"
        android:layout_alignRight="@id/edtConfirmPassword"
        android:layout_below="@id/edtConfirmPassword"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorGMS"
        android:text="SAVE"
        android:textColor="@color/colorWhite" />
</RelativeLayout>